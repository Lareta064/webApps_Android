extends ../layouts/layout-swipe-touch.pug

block content
	header.header.header-shadow
		.container
			.header-content
				a(href="profile-page.html").link-left Назад
				h1.h1 Локация
				.header-content__abs
					a(href="notifications.html").btn-notify
						span.label-num 3
						svg.svg-notify
							use(href="./img/spriteSvg.svg#svg-notify")

	main.profile-location.toggle-class
		.container
			//========= map ==========
			.profile-location-map
				script(type='text/javascript' charset='utf-8' async='' src='https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A13e02d731c04b56220a2a064d1fa54db38ac5402f907fd4bdf75e632a107fa8e&width=100%&height=100%&lang=ru_RU&scroll=false')
			
			
			//========= карточка с описанием ==========
			.profile-location-form.box-shadow
				//==========видимая часть ==========
				.visible-details
					.hide-details__open.toggle-class-add#swipe1
					.custom-search.custom-drop
						.custom-drop__input
							input(type="text"  value="Введите название")
							button.search-btn
						.custom-drop__list
							ul
								li.custom-drop__item
									a(href="#!") Московская область
								li.custom-drop__item
									a(href="#!") Самарская область
								li.custom-drop__item
									a(href="#!") Ульяновская область
								
	
	//============= FOOTER =============
	footer.nav-menu-panel
		nav.nav-menu
			a(href="monitoring.html")
				svg.svg-monitoring
					use(href="./img/spriteSvg.svg#svg-monitoring")
				span Мониторинг
			a(href="current-task-page.html")
				svg.svg-task
					use(href="./img/spriteSvg.svg#svg-task")
				span Текущ задача
			a(href="rating-page.html")
				svg.svg-rating
					use(href="./img/spriteSvg.svg#svg-rating")
				span Рейтинг
			a.active(href="profile-page.html")
				svg.svg-profile
					use(href="./img/spriteSvg.svg#svg-profile")
				span Профиль


block variables
	-var title = "Где искать заказы";