			li
				svg.svg-sort
					use(href="./img/spriteSvg.svg#svg-sort")
				pre.
					svg.svg-sort
						use(href="./img/spriteSvg.svg#svg-sort")
			
			li
				svg.svg-exit
					use(href="./img/spriteSvg.svg#svg-exit")
				pre.
					svg.svg-exit
						use(href="./img/spriteSvg.svg#svg-exit")
			li
				svg.svg-chevron
					use(href="./img/spriteSvg.svg#svg-chevron")
				pre.
					svg.svg-chevron
						use(href="./img/spriteSvg.svg#svg-chevron")			
			li
				svg.svg-monitoring
					use(href="./img/spriteSvg.svg#svg-monitoring")
				pre.
					svg.svg-monitoring
						use(href="./img/spriteSvg.svg#svg-monitoring")
			li
				svg.svg-task
					use(href="./img/spriteSvg.svg#svg-task")
				pre.
					svg.svg-task
						use(href="./img/spriteSvg.svg#svg-task")
			li
				svg.svg-rating
					use(href="./img/spriteSvg.svg#svg-rating")
				pre.
					svg.svg-rating
						use(href="./img/spriteSvg.svg#svg-rating")
			li
				svg.svg-profile
					use(href="./img/spriteSvg.svg#svg-profile")
				pre.
					svg.svg-profile
						use(href="./img/spriteSvg.svg#svg-profile")
	
			li
				.tabs
					//========= tabs toggle menu ========
					.tabs-menu
						nav
							button.tabs-menu__item.active(tab-btn="1") Назначенные
							button.tabs-menu__item(tab-btn="2") Ожидающие
							button.tabs-menu__item(tab-btn="3") Завершенные
						
					//========= tabs content ========
					.tabs-content
						//========== контент Назначенные =======
						.tabs-body.active(tab-body="1")
							h1.h1 Content 1
						//========== контент Назначенные =======
						.tabs-body(tab-body="2")
							h1.h1 Content 2
						//========== контент Назначенные =======
						.tabs-body(tab-body="3")
							h1.h1 Content 3
			li
				.sort-block
					button.btn-sort#sort-btnt(frame-btn="sort-tasks")
						span.icon-sort
						span Сортировать
					.sort-block__out
	
	.modal-frame-wrapper.sort-modal(frame-modal="sort-tasks")
		.modal-frame
			
			.modal-frame__body
				p.title-20 Сортировать по
				//============ Список сортировки ==========
				ul.base-list#sort-cat
					li 
						a(href="#!").sort-list-cat.active
							span Дате:
							span.cat-type сначала новые
					li 
						a(href="#!").sort-list-cat
							span Дате:
							span.cat-type  сначала старые
					li 
						a(href="#!").sort-list-cat
							span Регион:
							span.cat-type сначала ближе
					li 
						a(href="#!").sort-list-cat
							span Регион:
							span.cat-type сначала дальше

					li 
						a(href="#!").sort-list-cat
							span Дедлайн
							span.cat-type ближе
					li 
						a(href="#!").sort-list-cat
							span Дедлайн
							span.cat-type дальше
				
				//============ Отмена ==========
				button.sort-modal-close(frame-close) Отмена
block variables
