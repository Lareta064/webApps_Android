extends ../layouts/layout-swipe-touch.pug

block content
	
	//========== макет 22-23  вкладка На карте =========
	.single-task-location.single-task--current.toggle-class
		.custom-container.flex-column
			.fix-header
				a(href="current-task-page.html").btn-back.btn-round
			//========= map ==========
			.single-task-map
				script(type='text/javascript' charset='utf-8' async='' src='https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A13e02d731c04b56220a2a064d1fa54db38ac5402f907fd4bdf75e632a107fa8e&width=100%&height=100%&lang=ru_RU&scroll=false')

			
			//========= карточка с описанием ==========
			.single-task-details.box-shadow
				//==========видимая часть ==========
				.visible-details
					.hide-details__open.toggle-class-add#swipe
					
					.tc__header Название задачи, которое может переноситья на следующую строку, а потом и на ещё 1
					
					.tc__location МО, г. Москва, Тверской рай-н Тверская, 1

					a(href="large-24.html").btn Прибыл(а) на объект
					
					.simple-card
						p Обратный отсчёт:
						p.txt-accent.title-20 22 ч. 53 мин. 20 сек.
						p.txt-14 Осталось времени до выезда на объект
				
					//========== Подробнее о задаче ==========
					button.btn-outline(frame-btn="task-description") Подробнее о задаче
	
	//============= FOOTER =============
	footer.nav-menu-panel
		nav.nav-menu
			a(href="index.html")
				svg.svg-monitoring
					use(href="./img/spriteSvg.svg#svg-monitoring")
				span Мониторинг
			a.active(href="current-task-page.html")
				svg.svg-task
					use(href="./img/spriteSvg.svg#svg-task")
				span Текущ задача
			a(href="rating-page.html")
				svg.svg-rating
					use(href="./img/spriteSvg.svg#svg-rating")
				span Рейтинг
			a(href="profile-page.html")
				svg.svg-profile
					use(href="./img/spriteSvg.svg#svg-profile")
				span Профиль

	//======== task-description popUp =========
	.task-description.modal-frame-wrapper(frame-modal="task-description")
		.modal-frame
			.icon-close(frame-close)
			.tc__body
				//=========== task description =========
				.tc__text Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et massa mi. Aliquam in hendrerit urna. Pellentesque sit amet sapien fringilla, mattis ligula consectetur, ultrices mauris. Maecenas vitae mattis
				
				.tc__price Потенциальная оплата: #[span 20 000] ₽ 

				.tc__date
					.tc__cell Дата начало: #[span 08.10.23] в 
					.tc__cell Дата окончания: #[span 18.10.23] в #[span 19:00]

				.tc__time
					.time-start Время начала труд. дня: #[span  9:00] 
					.time-finish Время окончания  труд. дня: #[span 19:00]
				
				.tc__contractor Кол-во людей: #[span 6]
				
				.tc__requir Требования к форме: требуется, выдадут на месте
				a(href="location-page.html").link-right Показать на карте

block variables
	-var title = "Задача. Подробнее";
